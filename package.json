{
  "name": "taxi-app-merged",
  "version": "1.0.0",
  "description": "Unified Taxi App (MERN)",
  "scripts": {
    "start": "node backend/server.js",
    "server": "cd backend && nodemon server.js",
    "client": "cd frontend && vite",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd frontend && vite build",
    "lint": "cd frontend && eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "cd frontend && vite preview"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "socket.io": "^4.7.2",
    "axios": "^1.6.2",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.20.0",
    "socket.io-client": "^4.7.2",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0"
  }
}